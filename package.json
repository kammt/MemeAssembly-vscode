{
    "name": "memeassembly",
    "displayName": "MemeAssembly",
    "description": "A Meme-based programming language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.59.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "memeasm",
                "aliases": [
                    "MemeAssembly",
                    "memeasm"
                ],
                "extensions": [
                    "memeasm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "memeasm",
                "scopeName": "source.memeasm",
                "path": "./syntaxes/memeasm.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "memeasm",
                "path": "./snippets/snippets.code-snippets"
            }
        ],
        "debuggers": [
            {
                "linux": {
                    "type": "memeasm.gdb.debug",
                    "label": "Debug MemeAssembly using GDB",
                    "runtime": "node",
                    "program": "./debugger/gdb.js",
                    "configurationAttributes": {
                        "launch": {
                            "required": "target"
                        },
                        "properties": {
                            "target": {
                                "type": "string",
                                "description": "Path of executable"
                            },
                            "gdbpath": {
                                "type": "string",
                                "description": "Path to the gdb executable or the command if in PATH",
                                "default": "gdb"
                            }
                        }
                    },
                    "initialConfigurations": [
                        {
                            "name": "Debug MemeAssembly",
                            "type": "gdb",
                            "request": "launch",
                            "target": "${fileDirname}/main",
                            "cwd": "${fileDirname}"
                        }
                    ]
                }
            }
        ]
    }
}
